<Window x:Class="Grpc_WPF.BuyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Grpc_WPF"
        mc:Ignorable="d"
        Title="Vásárlás" Height="149" Width="287" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <Label Content="Termék:"/>
                <TextBox x:Name="inp_bookName" MinWidth="200" IsReadOnly="True" Loaded="Inp_bookName_Loaded"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Darab:" MinWidth="51"/>
                <TextBox x:Name="inp_number" MinWidth="200"/>
            </StackPanel>
            <Button x:Name="OkButton" Content="OK" Margin="20 20 20 0" Click="OkButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
